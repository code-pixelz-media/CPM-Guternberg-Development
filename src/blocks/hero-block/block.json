{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 2,
    "name": "cpm-advance-block/hero-block",
    "version": "0.1.0",
    "title": "Hero Block",
    "category": "widgets",
    "icon": "smiley",
    "description": "Hero Block for the Code Pixelz Media Pvt. Ltd.",
    "supports": {
        "html": false
    },
    "textdomain": "cpm-advance-block",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css",
    "attributes": {
        "list_id": {
            "type": "string"
        },
        "doubleoptin": {
            "type": "boolean"
        },
        "heroImageName": {
            "type": "array",
            "meta": "children",
            "selector": ".cpm-hero-image-name"
        },
        "heroImageTitle": {
            "type": "array",
            "meta": "children",
            "selector": ".cpm-hero-image-title"
        },
        "heroImageContent": {
            "type": "array",
            "selector": ".cpm-hero-image-text",
            "meta": "children"
        },
        "heroImageAlignment": {
            "type": "string"
        },
        "heroImageImgURL": {
            "type": "string",
            "source": "attribute",
            "attribute": "src",
            "selector": "img"
        },
        "heroImageImgID": {
            "type": "number"
        },
        "heroImageBackgroundColor": {
            "type": "string",
            "default": "#f2f2f2"
        },
        "heroImageTextColor": {
            "type": "string",
            "default": "#32373c"
        },
        "heroImageLinkColor": {
            "type": "string",
            "default": "#392f43"
        },
        "heroImageFontSize": {
            "type": "number",
            "default": 18
        }
    }
}